        <td colspan="2" valign="middle" height="70">  
			<table width="100%">
                <tr>
                    <td>
                            <img height="48" src="/resource/logo.png">
                    </td>
                    <td align="right">
                        Logged in as <a href="/adminhome" target="iFrame"><%=name%></a>&nbsp;|
                        <a href="/logout">Logout</a>
                    </td>
                </tr>
			</table>
        </td>
    </tr>
    <tr>
	<td width="190" valign="top">
			<b>&nbsp;Admin Panel</b><hr/>
            <ul>
                <li><a href="/adminhome" target="iFrame">Dashboard</a></li>
                <li><a href="/adminhome/student" target="iFrame">Students Info</a></li>
                <li><a href="/adminhome/teacher" target="iFrame">Teachers Info</a></li>
				<li><a href="/adminhome/search" target="iFrame">Search User</a></li>
                <li><a href="/adminhome/subject" target="iFrame">Add New Subject</a></li>
				<li><a href="/adminhome/assignteacher" target="iFrame">Assign Teacher To Subject</a></li>
				<li><a href="/adminhome/sendnotice" target="iFrame">Send Notice</a></li>
				<li><a href="/adminhome/studentreport" target="iFrame">Generate Student Report</a></li>
            </ul> 
			<b>&nbsp;Personal</b><hr/>
            <ul>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </td>
        <td valign="top">

		
		
		
		
		
		
	<table border="1" cellpadding="5" cellspacing="0">
		<tr><td colspan="4" align="CENTER">Teachers Info</td></tr>
		<tr>
			<td>ID</td><td>NAME</td><td>Status</td><td>Action</td>
		</tr>
		<% for(var i=0; i < uList.length; i++){ %>
		<tr>
			<td><%= uList[i].id %></td>
			<td><%= uList[i].name %></td>
			<td><%= uList[i].status %></td>
			<td>
				<% if(uList[i].status == "a"){ %>
					<form method="post" >
						<input type="hidden" name="id" value="<%= uList[i].id %>" />
						<input type="hidden" name="status" value="p" />
						<input type="submit" name="submit" value="Pending">
					</form>
					<form method="post" >
						<input type="hidden" name="id" value="<%= uList[i].id %>" />
						<input type="hidden" name="status" value="r" />
						<input type="submit" name="submit" value="Reject">
					</form>
				<% } %>
				<% if(uList[i].status == "p"){ %>
					<form method="post" >
						<input type="hidden" name="id" value="<%= uList[i].id %>" />
						<input type="hidden" name="status" value="a" />
						<input type="submit" name="submit" value="Approve">
					</form>
					<form method="post" >
						<input type="hidden" name="id" value="<%= uList[i].id %>" />
						<input type="hidden" name="status" value="r" />
						<input type="submit" name="submit" value="Reject">
					</form>
				<% } %>
				<% if(uList[i].status == "r"){ %>
					<form method="post" >
						<input type="hidden" name="id" value="<%= uList[i].id %>" />
						<input type="hidden" name="status" value="a" />
						<input type="submit" name="submit" value="Approve">
					</form>
					<form method="post" >
						<input type="hidden" name="id" value="<%= uList[i].id %>" />
						<input type="hidden" name="status" value="p" />
						<input type="submit" name="submit" value="Pending">
					</form>
				<% } %>
			</td>
		</tr>
		<% } %>
	</table>
	
	
	
	
	
	
	
	
	</td>
    </tr>
    <tr>
        <td colspan="2" align="center">
            Copyright &copy; 2019 (AIUB-ATP3)
        </td>
    </tr>
</table>
</body>
</html>